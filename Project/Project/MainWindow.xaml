<Window x:Class="Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Background="CornflowerBlue"
        WindowStartupLocation="CenterScreen"
        Title="Saver" Height="350" Width="500">
    <StackPanel>
        <Grid>
            <Grid HorizontalAlignment="Left" Height="209" Margin="100,50,0,0" VerticalAlignment="Top" Width="300" Background="AntiqueWhite">
                <Button x:Name="showPass"  Content="Show" HorizontalAlignment="Left" Margin="265,101,0,0" VerticalAlignment="Top" Width="25" Height="30" FontSize="8" Background="CornflowerBlue" Foreground="AntiqueWhite" Click="showPassFunc"/>
            </Grid>
            <Label Content="User Name:" HorizontalAlignment="Left" Margin="150,80,0,0" VerticalAlignment="Top" Foreground="CornflowerBlue" FontFamily="Century Gothic"/>
            <TextBox HorizontalAlignment="Left" x:Name="user"  Height="30" Margin="150,100,0,0"  VerticalAlignment="Top" Width="200" />
            <Label Content="Password:" HorizontalAlignment="Left" Margin="150,130,0,0" VerticalAlignment="Top" Foreground="CornflowerBlue" FontFamily="Century Gothic"/>
            <TextBox x:Name="passVisible"  HorizontalAlignment="Left" Margin="150,150,0,0" VerticalAlignment="Top" Width="200" Height="30" Visibility="Hidden" />
            <PasswordBox x:Name="pass"  HorizontalAlignment="Left" Margin="150,150,0,0" VerticalAlignment="Top" Width="200" Height="30"  />
            <Button Content="Login"  HorizontalAlignment="Left" Margin="200,213,0,0" VerticalAlignment="Top" Width="75" Foreground="white" FontFamily="Century Gothic" Background="CornflowerBlue" Click="performLoginAsync"/>
            <fa:ImageAwesome
            Spin="True" SpinDuration="3" x:Name="spinner" Margin="0,50,0,0" Icon="Spinner" Foreground="CornflowerBlue" Height="150" Visibility="Hidden"/>
        </Grid>


    </StackPanel>
</Window>
